###############################################################
# GENERAL
###############################################################

TZ=Europe/Brussels


###############################################################
# POSTGRES (SHARED DATABASE)
###############################################################
# Used by: n8n, Baserow
# IMPORTANT: keep backups & snapshots enabled on this path

POSTGRES_DB=automation
POSTGRES_USER=automation
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD


###############################################################
# N8N (AUTOMATION BRAIN)
###############################################################

# Public hostname used by reverse proxy (NPM / Traefik)
N8N_HOST=n8n.example.com

# n8n encryption key (generate once, NEVER change)
# Example: openssl rand -hex 32
N8N_ENCRYPTION_KEY=CHANGE_ME_LONG_RANDOM_KEY

# Basic auth (temporary or internal access only)
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=CHANGE_ME_STRONG_PASSWORD


###############################################################
# SMTP (TRANSACTIONAL EMAIL)
###############################################################
# Used ONLY for transactional / notification mails
# DO NOT use for bulk campaigns

SMTP_HOST=smtp.mailgun.org
SMTP_PORT=587
SMTP_USER=postmaster@example.com
SMTP_PASS=CHANGE_ME_SMTP_PASSWORD
SMTP_FROM=automation@example.com


###############################################################
# ANYTHINGLLM
###############################################################
# JWT secret for AnythingLLM auth
# Generate once and keep stable
ANYTHINGLLM_JWT_SECRET=CHANGE_ME_SUPER_LONG_SECRET

# Default Ollama model used by AnythingLLM
OLLAMA_MODEL=llama3.1


###############################################################
# GPU (OLLAMA)
###############################################################
# If you have multiple GPUs, you can restrict this
# Example: NVIDIA_VISIBLE_DEVICES=0

NVIDIA_VISIBLE_DEVICES=all


###############################################################
# OPTIONAL: WATCHTOWER (GLOBAL)
